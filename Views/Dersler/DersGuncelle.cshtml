@model OgrenciNotMvc.Models.EntityFramework.TBLDERSLER
@{
    ViewBag.Title = "DersGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.DERSID)

        <div class="form-group">
            @Html.LabelFor(m => m.DERSAD, "Ad")
            @Html.TextBoxFor(m => m.DERSAD, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.HAFTALIK_SAAT,"Haftalık Saat")
            @Html.TextBoxFor(m => m.HAFTALIK_SAAT, new { @class = "form-control" })
        </div>

        <div style="margin-top:10px">
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </div>
    }
</div>

