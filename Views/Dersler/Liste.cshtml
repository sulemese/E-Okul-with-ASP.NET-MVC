@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLDERSLER> 

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ders Listesi </h2>


<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS ADI</th>
        <th>İŞLEMLER</th>
        
    </tr>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.DERSID</td>
            <td>@item.DERSAD</td>
            <td>
                <a href="/Dersler/DersSil/@item.DERSID" class="btn btn-danger">Sil</a>
                <a href="/Dersler/DersGuncelle/@item.DERSID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>


        }
    </tbody>
    
</table>

<a href="/Dersler/DersEkle" class="btn btn-primary">Yeni Ders Kaydı</a>

